{
  "manifest_version": 3,
  "name": "Browser History Map Explorer",
  "version": "1.0",
  "description": "Export your browser history for visualization on Browser History Map Explorer",
  "permissions": [
    "history",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://shikhary.github.io/*",
    "http://localhost:*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Export Browser History"
  },
  "content_scripts": [
    {
      "matches": ["https://shikhary.github.io/browser-history-map/*", "http://localhost:*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
