{
  "manifest_version": 3,
  "name": "Browser History Map Exporter",
  "version": "1.0.0",
  "description": "Export your browser history to Browser History Map Explorer for visualization",
  "permissions": [
    "history",
    "activeTab",
    "storage",
    "downloads",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Export History to Map"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://shikhary.github.io/browser-history-map/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
